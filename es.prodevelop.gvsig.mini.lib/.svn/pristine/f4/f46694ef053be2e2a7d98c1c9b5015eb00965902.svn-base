<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:layout_marginRight="10dip"
	android:layout_marginLeft="10dip">
	<ScrollView android:fillViewport="true"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:id="@+id/data" android:orientation="vertical">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:id="@+id/poi_row" android:orientation="horizontal">
				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="wrap_content" android:layout_height="fill_parent"
					android:id="@+id/poi_img" android:orientation="vertical"
					android:gravity="center_vertical">
					<es.prodevelop.gvsig.mini.views.LegendView
						android:id="@+id/img" android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:textSize="26sp"
						android:textColor="#FFFFFF"></es.prodevelop.gvsig.mini.views.LegendView>
				</LinearLayout>
				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_weight="1" android:id="@+id/poi_desc"
					android:orientation="vertical">
					<TextView android:id="@+id/desc" android:layout_height="wrap_content"
						android:layout_width="fill_parent" android:textSize="26sp"
						android:textColor="#FFFFFF"></TextView>
					<TextView android:id="@+id/dist" android:layout_width="fill_parent"
						android:layout_height="wrap_content"></TextView>
				</LinearLayout>
				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="wrap_content" android:layout_height="fill_parent"
					android:id="@+id/map_options" android:orientation="vertical"
					android:gravity="center_vertical" android:focusable="false">
					<ImageButton android:id="@+id/show_options"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:background="@drawable/opt_button" android:focusable="false"
						android:gravity="center_vertical" android:visibility="gone" />
					<!-- <Button android:id="@+id/show_details" android:text="@string/show_details" -->
					<!-- android:layout_width="wrap_content" android:layout_height="wrap_content" -->
					<!-- android:gravity="center_horizontal" android:visibility="gone" /> -->
				</LinearLayout>
			</LinearLayout>
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="fill_parent"
				android:id="@+id/extra_data" android:orientation="vertical">
			</LinearLayout>
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="fill_parent"
				android:id="@+id/map_options" android:orientation="horizontal"
				android:gravity="center_horizontal">
				<ImageButton android:id="@+id/show_options"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:background="@drawable/opt_button" android:focusable="false"
					android:gravity="center_horizontal" android:visibility="gone" />
				<Button android:id="@+id/show_details" android:text="@string/show_details"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:gravity="center_horizontal" android:visibility="gone" />
			</LinearLayout>
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:id="@+id/map_preview" android:orientation="vertical">
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
